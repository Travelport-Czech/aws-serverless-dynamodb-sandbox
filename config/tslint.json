{
  "defaultSeverity": "error",
  "extends": [
    "tslint:latest",
    "tslint-consistent-codestyle",
    "tslint-eslint-rules",
    "tslint-immutable",
    "tslint-microsoft-contrib",
    "tslint-plugin-prettier",
    "tslint-config-prettier",
    "tslint-config-security"
  ],
  "jsRules": {},
  "rules": {
    "no-submodule-imports": [true, "@", "source-map-support/register"],
    "no-implicit-dependencies": [true, "dev", ["@", "source-map-support/register"]],
    "no-import-side-effect": [true, { "ignore-pattern": "source-map-support/register" }],
    "typedef": [false, "variable-declaration"], // Typedef enforcement for variables that contain a function => duplicate function declaration
    "no-use-before-declare": false, // useful only for var declaration
    "only-arrow-functions": true,
    "interface-name": [true, "never-prefix"],
    "jsx-boolean-value": ["never"],
    "prefer-template": false,
    "type-literal-delimiter": false,
    "no-unsafe-any": true,
    "newline-per-chained-call": false,
    "strict-boolean-expressions": false,
    "completed-docs": false,
    "mocha-no-side-effect-code": false,
    // Immutability rules
    "readonly-keyword": true,
    "no-let": true,
    "no-object-mutation": true,
    "no-delete": true,
    "prettier": [true, "config/prettier.config.js"]
  },
  "rulesDirectory": [
    "../node_modules/tslint-eslint-rules/dist/rules",
    "../node_modules/tslint-microsoft-contrib"
  ]
}
