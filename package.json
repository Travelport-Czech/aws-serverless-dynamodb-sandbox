{
  "name": "aws-serverless-dynamodb-sandbox",
  "version": "1.0.0",
  "main": "index.js",
  "author": "michal.bures@travelportgds.cz",
  "license": "none",
  "private": true,
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "lint": "tsc --project tsconfig.json && eslint --ext .ts .",
    "serverless": "node_modules/.bin/serverless",
    "offline": "serverless offline start --stage local",
    "test:e2e": "concurrently --raw -k -s first \"npm run offline\" \"wait-on http://localhost:3000/status && jest -c tests/e2e/jest.config.js ./tests/e2e\"",
    "test:acceptance": "jest -c tests/acceptance/jest.config.js ./tests/acceptance"
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "endOfLine": "lf",
    "printWidth": 120,
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {},
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "rules": {
          "@typescript-eslint/no-unused-vars": [
            2,
            {
              "args": "none"
            }
          ]
        }
      }
    ]
  },
  "devDependencies": {
    "@travelport-czech/valid-objects-ts": "^1.1.5",
    "@types/aws-lambda": "^8.10.40",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^25.1.2",
    "@types/node": "^12.12.26",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.7",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.815.0",
    "babel-loader": "^8.2.2",
    "cache-loader": "^4.1.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "extendable-error": "^0.1.7",
    "http-errors": "^1.8.0",
    "jest": "^26.6.3",
    "middy": "^0.36.0",
    "prettier": "^2.2.1",
    "serverless": "^1.83.2",
    "serverless-dotenv-plugin": "^3.1.0",
    "serverless-dynamodb-local": "^0.2.39",
    "serverless-offline": "^6.8.0",
    "serverless-webpack": "^5.3.5",
    "source-map-support": "^0.5.19",
    "supertest": "^6.0.1",
    "thread-loader": "^3.0.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.12",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2",
    "wait-on": "^5.2.0",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.2.0",
    "webpack-node-externals": "^2.5.2"
  }
}
