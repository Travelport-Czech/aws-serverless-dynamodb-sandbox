{
  "name": "aws-serverless-dynamodb-sandbox",
  "version": "1.0.0",
  "main": "index.js",
  "author": "michal.bures@travelportgds.cz",
  "license": "none",
  "private": true,
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "lint": "tsc --project tsconfig.json && eslint --ext .ts .",
    "autofix": "prettier **/* --write",
    "serverless": "node_modules/.bin/serverless",
    "deploy": "npm run lint && npm run serverless -- deploy",
    "offline": "serverless offline start --stage local",
    "test": "concurrently --raw -k -s first \"npm run offline\" \"wait-on http://localhost:3000/status && jest ./tests\""
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/src/$1"
    },
    "setupFiles": [
      "<rootDir>/tests/bootstrap.ts"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "endOfLine": "lf",
    "printWidth": 120,
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {},
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "rules": {
          "@typescript-eslint/no-unused-vars": [
            2,
            {
              "args": "none"
            }
          ]
        }
      }
    ]
  },
  "devDependencies": {
    "@travelport-czech/valid-objects-ts": "^1.1.5",
    "@types/aws-lambda": "^8.10.40",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^25.1.2",
    "@types/node": "^12.12.26",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.7",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "aws-lambda": "^1.0.5",
    "aws-sdk": "^2.614.0",
    "babel-loader": "^8.0.6",
    "cache-loader": "^4.1.0",
    "concurrently": "^5.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "extendable-error": "^0.1.5",
    "http-errors": "^1.7.3",
    "jest": "^25.1.0",
    "middy": "^0.33.2",
    "prettier": "^1.19.1",
    "serverless": "^1.63.0",
    "serverless-dotenv-plugin": "^2.3.1",
    "serverless-dynamodb-local": "^0.2.39",
    "serverless-offline": "^5.12.1",
    "serverless-webpack": "^5.3.1",
    "source-map-support": "^0.5.16",
    "supertest": "^4.0.2",
    "thread-loader": "^2.1.3",
    "ts-jest": "^25.2.0",
    "ts-loader": "^6.2.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.7.5",
    "uuid": "^3.4.0",
    "wait-on": "^4.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2"
  }
}
